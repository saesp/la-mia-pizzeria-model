@model List<Pizza>;


<div class="container">
    <h1 class="display-4 mb-4">Pizzas</h1>

        <ul class="row list-unstyled">
        @foreach (Pizza pizza in Model)
        {
            <li class="col-4">
                <div class="card">
                    <h3 class="text-center">@pizza.Name</h3>
                    <div class="card-body">
                        <img src="@pizza.Image" width="100%" />
                        <div class="text-danger">@pizza.Price €</div>
                        <a href="@Url.Action("Details", "Pizza", new {id= pizza.Id})"><button>Visualizza</button></a>
                    </div>
                </div>
            </li>
        }
        </ul>

</div>
